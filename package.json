{
  "name": "infoplus-backend",
  "version": "1.0.0",
  "description": "Backend para processamento de pagamentos Infoplus",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --testPathIgnorePatterns=integration/ --verbose",
    "test:integration": "jest integration/ --verbose",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "docker:build": "docker build -t infoplus-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env infoplus-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up",
    "deploy": "bash deploy.sh",
    "healthcheck": "curl -f http://localhost:3000/health"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^11.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "payment",
    "api",
    "firebase",
    "paysuite",
    "mozambique"
  ],
  "author": "InfoPlus Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/infoplus-backend"
  },
  "bugs": {
    "url": "https://github.com/your-username/infoplus-backend/issues"
  },
  "homepage": "https://github.com/your-username/infoplus-backend#readme"
}
